{
  "$schema": "https://raw.githubusercontent.com/JanDeDobbeleer/oh-my-posh/main/themes/schema.json",
  "final_space": true,
  "version": 2,
  "blocks": [
    {
      "type": "prompt",
      "alignment": "left",
      "newline": true,
      "segments": [
        {
          "type": "path",
          "style": "diamond",
          "leading_diamond": "\ue0b6",
          "trailing_diamond": "\ue0b4",
          "foreground": "#111111",
          "background": "#d9ed92",
          "properties": {
            "style": "folder"
          },
          "template": " {{if eq .Path \"~\"}}\uf74b {{.UserName}}{{else}}\uf74a {{.Path}}{{end}} "
        },
        {
          "type": "executiontime",
          "style": "diamond",
          "leading_diamond": " \ue0b6",
          "foreground": "#111111",
          "background": "#d9ed92",
          "properties": {
            "always_enabled": true
          },
          "template": " \uf608 {{.FormattedMs}} "
        },
        {
          "type": "exit",
          "style": "powerline",
          "powerline_symbol": "\ue0b4",
          "foreground": "#111111",
          "background": "#b5e48c",
          "background_templates": [
            "{{if gt .Code 0}}#99d98c{{end}}"
          ],
          "properties": {
            "always_enabled": true
          },
          "template": " {{if gt .Code 0}}\uf7d3{{else}}\uf7d0{{end}} "
        }
      ]
    },
    {
      "type": "prompt",
      "alignment": "right",
      "segments": [
        {
          "alias": "root",
          "type": "root",
          "style": "powerline",
          "powerline_symbol": "\ue0b6",
          "invert_powerline": true,
          "foreground": "#111111",
          "background": "#b5e48c",
          "template": " \uf085  "
        },
        {
          "type": "time",
          "style": "diamond",
          "trailing_diamond": "\ue0b4",
          "invert_powerline": true,
          "foreground": "#111111",
          "background": "#d9ed92",   
          "properties": {
            "time_format": "04:05"
          },
          "template": "{{if not (.Segments.Contains \"root\")}}<#d9ed92,transparent>\ue0b6</>{{end}} \uf64f {{.CurrentDate | date .Format}} "
        }
      ]
    },
    {
      "type": "prompt",
      "alignment": "left",
      "newline": true,
      "segments": [
        {
          "type": "text", 
          "style": "plain",
          "foreground": "#d9ed92",
          "template": "\u2771"
        }
      ]
    }
  ],
  "secondary_prompt": {
    "foreground": "#d9ed92",
    "template": "\u276f "
  }
}