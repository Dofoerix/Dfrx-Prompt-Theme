{
  "$schema": "https://raw.githubusercontent.com/JanDeDobbeleer/oh-my-posh/main/themes/schema.json",
  "final_space": true,
  "version": 2,
  "blocks": [
    {
      "type": "prompt",
      "alignment": "left",
      "newline": true,
      "segments": [
        {
          "type": "path",
          "style": "diamond",
          "leading_diamond": "\ue0b6",
          "foreground": "#111111",
          "background": "#f1f1f1",
          "properties": {
            "style": "folder"
          },
          "template": " {{if eq .Path \"~\"}}\uf74b {{.UserName}}{{else}}\uf74a {{.Path}}{{end}} <#f1f1f1,transparent>\ue0b4</>"
        },
        {
          "type": "executiontime",
          "style": "diamond",
          "leading_diamond": " \ue0b6",
          "foreground": "#111111",
          "background": "#f1f1f1",
          "properties": {
            "always_enabled": true
          },
          "template": " \uf608 {{.FormattedMs}} "
        },
        {
          "type": "exit",
          "style": "powerline",
          "powerline_symbol": "\ue0b4",
          "foreground": "#111111",
          "background": "#bcbcbc",
          "background_templates": [
            "{{if gt .Code 0}}#717171{{end}}"
          ],
          "properties": {
            "always_enabled": true
          },
          "template": " {{if gt .Code 0}}\uf7d3{{else}}\uf7d0{{end}} "
        }
      ]
    },
    {
      "type": "prompt",
      "alignment": "right",
      "segments": [
        {
          "alias": "root",
          "type": "root",
          "style": "powerline",
          "powerline_symbol": "\ue0b6",
          "invert_powerline": true,
          "foreground": "#111111",
          "background": "#bcbcbc",
          "template": " \uf085  "
        },
        {
          "type": "time",
          "style": "diamond",
          "trailing_diamond": "\ue0b4",
          "invert_powerline": true,
          "foreground": "#111111",
          "background": "#f1f1f1",   
          "properties": {
            "time_format": "04:05"
          },
          "template": "{{if not (.Segments.Contains \"root\")}}<#f1f1f1,transparent>\ue0b6</>{{end}} \uf64f {{.CurrentDate | date .Format}} "
        }
      ]
    },
    {
      "type": "prompt",
      "alignment": "left",
      "newline": true,
      "segments": [
        {
          "type": "text", 
          "style": "plain",
          "foreground": "#f1f1f1",
          "template": "\u2771"
        }
      ]
    }
  ],
  "transient_prompt": {
    "foreground": "#111111",
    "template": "<#f1f1f1, transparent>\ue0b6</><#111111,#f1f1f1> \uf64f {{.Segments.Time.CurrentDate | date \"15:04:05\"}} </><#f1f1f1, transparent>\ue0b4</> <#bcbcbc, transparent>\ue0b6</><#111111,#bcbcbc> {{if eq .Segments.Path.Path \"~\"}}\uf74b {{.UserName}}{{else}}\uf74a {{.Segments.Path.Path}}{{end}} </><#bcbcbc, transparent>\ue0b4</> <#f1f1f1, transparent>\ue0b6</><#111111,#f1f1f1> \uf608 {{.Segments.Executiontime.FormattedMs}} </>{{if gt .Code 0}}<#f1f1f1,#898989>\ue0b4</><#111111,#898989> {{if gt .Code 0}}\uf7d3{{else}}\uf7d0{{end}} </><#898989,transparent>\ue0b4</>{{else}}<#f1f1f1,#bcbcbc>\ue0b4</><#111111,#bcbcbc> {{if gt .Code 0}}\uf7d3{{else}}\uf7d0{{end}} </><#bcbcbc,transparent>\ue0b4</>{{end}} <#f1f1f1>\u2771</> "  
  },
  "secondary_prompt": {
    "foreground": "#f1f1f1",
    "template": "\u276f "
  }
}