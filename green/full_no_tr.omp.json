{
  "$schema": "https://raw.githubusercontent.com/JanDeDobbeleer/oh-my-posh/main/themes/schema.json",
  "final_space": true,
  "version": 2,
  "blocks": [
    {
      "type": "prompt",
      "alignment": "left",
      "newline": true,
      "segments": [
        {
          "type": "session",
          "style": "diamond",
          "leading_diamond": "\ue0b6",
          "trailing_diamond": "\ue0b4 ",
          "foreground": "#111111",
          "background": "#ccff33",
          "template": " \uf508 {{.UserName}} "
        },
        {
          "type": "path",
          "style": "diamond",
          "leading_diamond": "\ue0b6",
          "foreground": "#111111",
          "background": "#9ef01a",
          "properties": {
            "style": "folder"
          },
          "template": " {{if eq .Path \"~\"}}\uf74b {{.UserName}}{{else}}\uf74a {{.Path}}{{end}} {{if not (.Segments.Contains \"git\")}}<#9ef01a,transparent>\ue0b4</>{{end}}"
        },
        {
          "alias": "git",
          "type": "git",
          "style": "powerline",
          "powerline_symbol": "\ue0b4",
          "foreground": "#111111",
          "background": "#70e000",
          "background_templates": [
            "{{if or .Working.Changed .Staging.Changed}}#70e000{{end}}",
            "{{if and gt .Ahead 0 gt .Behind 0}}#70e000{{end}}",
            "{{if gt .Ahead 0}}#70e000{{end}}",
            "{{if gt .Behind 0}}#70e000{{end}}"
          ],
          "properties": {
            "branch_max_length": 20,
            "fetch_stash_count": true,
            "fetch_status": true,
            "fetch_upstream_icon": true,
            "github_icon": "\uf7a3",
            "branch_icon": "\ue725 "
          },
          "template": " {{if .UpstreamIcon}}{{.UpstreamIcon}} | {{else}}\uf7a1 | {{end}}{{.HEAD}} | {{if .BranchStatus}}{{.BranchStatus}}{{end}}{{if .Working.Changed}} | \uf044 {{.Working.String}}{{end}}{{if and .Working.Changed .Staging.Changed}}{{end}}{{if .Staging.Changed}} | \uf046 {{.Staging.String}}{{end}}{{if gt .StashCount 0}}| \uf692 {{.StashCount}}{{end}} "
        },
        {
          "type": "python",
          "style": "powerline",
          "powerline_symbol": "\ue0b4",
          "foreground": "#111111",
          "background": "#38b000",
          "properties": {
            "display_mode": "files",
            "fetch_version": true
          },
          "template": " \uf81f {{.Full}} "
        },
        {
          "type": "executiontime",
          "style": "diamond",
          "leading_diamond": " \ue0b6",
          "foreground": "#111111",
          "background": "#70e000",
          "properties": {
            "always_enabled": true
          },
          "template": " \uf608 {{.FormattedMs}} "
        },
        {
          "type": "exit",
          "style": "powerline",
          "powerline_symbol": "\ue0b4",
          "foreground": "#111111",
          "background": "#38b000",
          "background_templates": [
            "{{if gt .Code 0}}#008000{{end}}"
          ],
          "properties": {
            "always_enabled": true
          },
          "template": " {{if gt .Code 0}}\uf7d3{{else}}\uf7d0{{end}} "
        }
      ]
    },
    {
      "type": "prompt",
      "alignment": "right",
      "segments": [
        {
          "alias": "root",
          "type": "root",
          "style": "powerline",
          "powerline_symbol": "\ue0b6",
          "invert_powerline": true,
          "foreground": "#111111",
          "background": "#9ef01a",
          "template": " \uf085  "
        },
        {
          "type": "time",
          "style": "diamond",
          "trailing_diamond": "\ue0b4",
          "invert_powerline": true,
          "foreground": "#111111",
          "background": "#ccff33",   
          "template": "{{if not (.Segments.Contains \"root\")}}<#ccff33,transparent>\ue0b6</>{{end}} \uf64f {{.CurrentDate | date .Format}} "
        }
      ]
    },
    {
      "type": "prompt",
      "alignment": "left",
      "newline": true,
      "segments": [
        {
          "type": "text", 
          "style": "plain",
          "foreground": "#ccff33",
          "template": "\u2771"
        }
      ]
    }
  ],
  "secondary_prompt": {
    "foreground": "#ccff33",
    "template": "\u276f "
  }
}