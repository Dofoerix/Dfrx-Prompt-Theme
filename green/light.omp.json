{
  "$schema": "https://raw.githubusercontent.com/JanDeDobbeleer/oh-my-posh/main/themes/schema.json",
  "secondary_prompt": {
    "template": "❯ ",
    "foreground": "p:background-light",
    "background": "transparent"
  },
  "transient_prompt": {
    "template": "<p:background-light, transparent></><p:text,p:background-light> 󱑎 {{.Segments.Time.CurrentDate | date \"15:04:05\"}} </><p:background-light, transparent></> <p:background-dark, transparent></><p:text,p:background-dark> {{if eq .Segments.Path.Path \"󰉌\"}}󰉌 {{.UserName}}{{else}}{{.Segments.Path.Path}}{{end}} </><p:background-dark, transparent></> <p:background-light, transparent></><p:text,p:background-light> 󰄉 {{.Segments.Executiontime.FormattedMs}} </>{{if .Segments.Status.Error}}<p:background-light,p:background-error></><p:text,p:background-error> {{if .Segments.Status.Error}}󰋔{{else}}󰋑{{end}} </><p:background-error,transparent></>{{else}}<p:background-light,p:background-dark></><p:text,p:background-dark> {{if .Segments.Status.Error}}󰋔{{else}}󰋑{{end}} </><p:background-dark,transparent></>{{end}} <p:background-light>❱</> ",
    "foreground": "p:text"
  },
  "palette": {
    "text": "#111111",
    "background-light": "#9ed916",
    "background-dark": "#83b314",
    "background-error": "#658c0f"
  },
  "blocks": [
    {
      "type": "prompt",
      "alignment": "left",
      "segments": [
        {
          "properties": {
            "style": "agnoster",
            "home_icon": "󰉌",
            "folder_icon": "󰉋",
            "folder_separator_template": " 󰅂 "
          },
          "leading_diamond": "",
          "trailing_diamond": "",
          "template": " {{if eq .Path \"󰉌\"}}󰉌 {{.UserName}}{{else}}{{.Path}}{{end}} ",
          "foreground": "p:text",
          "background": "p:background-light",
          "type": "path",
          "style": "diamond"
        },
        {
          "trailing_diamond": "",
          "template": "  {{if .Error}}{{.Error}}{{else}}{{if .Venv}}{{.Venv}}{{end}}{{end}} ",
          "foreground": "p:text",
          "background": "p:background-dark",
          "type": "python",
          "style": "diamond"
        },
        {
          "properties": {
            "always_enabled": true
          },
          "leading_diamond": " ",
          "template": " 󰄉 {{.FormattedMs}} ",
          "foreground": "p:text",
          "background": "p:background-light",
          "type": "executiontime",
          "style": "diamond"
        },
        {
          "properties": {
            "always_enabled": true
          },
          "template": " {{if .Error}}󰋔{{else}}󰋑{{end}} ",
          "foreground": "p:text",
          "powerline_symbol": "",
          "background": "p:background-dark",
          "type": "status",
          "style": "powerline",
          "background_templates": [
            "{{if .Error}}p:background-error{{end}}"
          ]
        }
      ],
      "newline": true
    },
    {
      "type": "prompt",
      "alignment": "right",
      "segments": [
        {
          "template": "   ",
          "foreground": "p:text",
          "leading_diamond": "",
          "background": "p:background-dark",
          "type": "root",
          "style": "diamond"
        },
        {
          "properties": {
            "time_format": "04:05"
          },
          "leading_diamond": "",
          "trailing_diamond": "",
          "template": " 󱑎 {{.CurrentDate | date .Format}} ",
          "foreground": "p:text",
          "background": "p:background-light",
          "type": "time",
          "style": "diamond"
        }
      ]
    },
    {
      "type": "prompt",
      "alignment": "left",
      "segments": [
        {
          "template": "❱",
          "foreground": "p:background-light",
          "type": "text",
          "style": "plain"
        }
      ],
      "newline": true
    }
  ],
  "version": 3,
  "final_space": true
}