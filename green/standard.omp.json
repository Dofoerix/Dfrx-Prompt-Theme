{
  "$schema": "https://raw.githubusercontent.com/JanDeDobbeleer/oh-my-posh/main/themes/schema.json",
  "final_space": true,
  "version": 2,
  "blocks": [
    {
      "type": "prompt",
      "alignment": "left",
      "newline": true,
      "segments": [
        {
          "type": "path",
          "style": "diamond",
          "leading_diamond": "\ue0b6",
          "foreground": "#111111",
          "background": "#ccff33",
          "properties": {
            "style": "folder"
          },
          "template": " {{if eq .Path \"~\"}}\uf74b {{.UserName}}{{else}}\uf74a {{.Path}}{{end}} {{if not (.Segments.Contains \"git\")}}<#ccff33,transparent>\ue0b4</>{{end}}"
        },
        {
          "alias": "git",
          "type": "git",
          "style": "powerline",
          "powerline_symbol": "\ue0b4",
          "foreground": "#111111",
          "background": "#9ef01a",
          "background_templates": [
            "{{if or .Working.Changed .Staging.Changed}}#9ef01a{{end}}",
            "{{if and gt .Ahead 0 gt .Behind 0}}#9ef01a{{end}}",
            "{{if gt .Ahead 0}}#9ef01a{{end}}",
            "{{if gt .Behind 0}}#9ef01a{{end}}"
          ],
          "properties": {
            "branch_max_length": 20,
            "fetch_stash_count": true,
            "fetch_status": true,
            "fetch_upstream_icon": true,
            "github_icon": "\uf7a3",
            "branch_icon": "\ue725 "
          },
          "template": " {{if .UpstreamIcon}}{{.UpstreamIcon}} | {{else}}\uf7a1 | {{end}}{{.HEAD}} | {{if .BranchStatus}}{{.BranchStatus}}{{end}}{{if .Working.Changed}} | \uf044 {{.Working.String}}{{end}}{{if and .Working.Changed .Staging.Changed}}{{end}}{{if .Staging.Changed}} | \uf046 {{.Staging.String}}{{end}}{{if gt .StashCount 0}}| \uf692 {{.StashCount}}{{end}} "
        },
        {
          "type": "executiontime",
          "style": "diamond",
          "leading_diamond": " \ue0b6",
          "foreground": "#111111",
          "background": "#ccff33",
          "properties": {
            "always_enabled": true
          },
          "template": " \uf608 {{.FormattedMs}} "
        },
        {
          "type": "exit",
          "style": "powerline",
          "powerline_symbol": "\ue0b4",
          "foreground": "#111111",
          "background": "#9ef01a",
          "background_templates": [
            "{{if gt .Code 0}}#70e000{{end}}"
          ],
          "properties": {
            "always_enabled": true
          },
          "template": " {{if gt .Code 0}}\uf7d3{{else}}\uf7d0{{end}} "
        }
      ]
    },
    {
      "type": "prompt",
      "alignment": "right",
      "segments": [
        {
          "alias": "root",
          "type": "root",
          "style": "powerline",
          "powerline_symbol": "\ue0b6",
          "invert_powerline": true,
          "foreground": "#111111",
          "background": "#9ef01a",
          "template": " \uf085  "
        },
        {
          "type": "time",
          "style": "diamond",
          "trailing_diamond": "\ue0b4",
          "invert_powerline": true,
          "foreground": "#111111",
          "background": "#ccff33",   
          "properties": {
            "time_format": "04:05"
          },
          "template": "{{if not (.Segments.Contains \"root\")}}<#ccff33,transparent>\ue0b6</>{{end}} \uf64f {{.CurrentDate | date .Format}} "
        }
      ]
    },
    {
      "type": "prompt",
      "alignment": "left",
      "newline": true,
      "segments": [
        {
          "type": "text", 
          "style": "plain",
          "foreground": "#ccff33",
          "template": "\u2771"
        }
      ]
    }
  ],
  "transient_prompt": {
    "foreground": "#111111",
    "template": "<#ccff33, transparent>\ue0b6</><#111111,#ccff33> \uf64f {{.Segments.Time.CurrentDate | date \"15:04:05\"}} </><#ccff33, transparent>\ue0b4</> <#9ef01a, transparent>\ue0b6</><#111111,#9ef01a> {{if eq .Segments.Path.Path \"~\"}}\uf74b {{.UserName}}{{else}}\uf74a {{.Segments.Path.Path}}{{end}} </><#9ef01a, transparent>\ue0b4</> <#ccff33, transparent>\ue0b6</><#111111,#ccff33> \uf608 {{.Segments.Executiontime.FormattedMs}} </>{{if gt .Code 0}}<#ccff33,#70e000>\ue0b4</><#111111,#70e000> {{if gt .Code 0}}\uf7d3{{else}}\uf7d0{{end}} </><#70e000,transparent>\ue0b4</>{{else}}<#ccff33,#9ef01a>\ue0b4</><#111111,#9ef01a> {{if gt .Code 0}}\uf7d3{{else}}\uf7d0{{end}} </><#9ef01a,transparent>\ue0b4</>{{end}} <#ccff33>\u2771</> "  
  },
  "secondary_prompt": {
    "foreground": "#ccff33",
    "template": "\u276f "
  }
}